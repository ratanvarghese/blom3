#!/bin/bash
# vim : set filetype=sh

blomdir="/home/tobias/blog"
logsdir="$blomdir/logs"
db="$blomdir/blom.db"
src="$blomdir/src"
sqlite3="sqlite3 -readonly $db"

yesterday=$($sqlite3 < $src/today_tq.sql | tr -d "\n")
cp $logsdir/access.log $logsdir/dated/$yesterday.log
echo "" > $logsdir/access.log
