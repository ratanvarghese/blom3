#!/usr/bin/env sh
# vim : set filetype=sh

if [ -z "$1" ]; then
	echo "Error: no directory provided. Exiting..."
	exit 64
fi


if [ -z "$2" ]; then
	echo "Error: no article provided. Exiting..."
	exit 64
fi

scp "$1/blom.db" blog:~/blog/blom.db

for article in "$@"; do
	if [ "$article" != "$1" ]
	then
		scp -r "$1/public/$article/" blog:~/blog/public/
	fi
done